generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  bio       String?  @db.Text
  role      String   @default("USER")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  posts     Post[]

  @@map("users")
}

model Post {
  id          Int            @id @default(autoincrement())
  title       String         @db.VarChar(200)
  content     String         @db.LongText
  tags        String?        @db.Text // JSON array stringified
  isPrivate   Boolean        @default(false) @map("is_private")
  secretToken String?        @unique @map("secret_token") @db.VarChar(36)
  viewCount   Int            @default(0) @map("view_count")
  authorId    Int            @map("author_id")
  author      User           @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")
  postViews   PostView[]
  reactions   PostReaction[]

  @@map("posts")
}

model PostView {
  id        Int      @id @default(autoincrement())
  postId    Int      @map("post_id")
  ipAddress String   @map("ip_address") @db.VarChar(50)
  viewedAt  DateTime @default(now()) @map("viewed_at")
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, ipAddress])
  @@map("post_views")
}

model PostReaction {
  id           Int       @id @default(autoincrement())
  postId       Int       @map("post_id")
  reactionType String    @map("reaction_type") @db.VarChar(10) // LIKE or DISLIKE
  facebookId   String?   @map("facebook_id") @db.VarChar(100)
  ipAddress    String?   @map("ip_address") @db.VarChar(50)
  createdAt    DateTime  @default(now()) @map("created_at")
  post         Post      @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, facebookId])
  @@unique([postId, ipAddress])
  @@map("post_reactions")
}

model Template {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(100)
  description String   @db.VarChar(500)
  tags        String?  @db.Text // JSON array stringified
  content     String   @db.LongText
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("templates")
}

model PromptTemplate {
  id           Int      @id @default(autoincrement())
  title        String   @db.VarChar(200)
  description  String?  @db.VarChar(500)
  systemPrompt String   @db.LongText @map("system_prompt")
  temperature  Float    @default(0.3)
  maxTokens    Int      @default(4096) @map("max_tokens")
  model        String   @default("gpt-4o-mini") @db.VarChar(50)
  order        Int      @default(0)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("prompt_templates")
}

